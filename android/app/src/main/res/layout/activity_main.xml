<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="274dp"
        android:layout_height="41dp"
        android:layout_marginTop="32dp"
        android:text="Welcome to Giraffe!"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="335dp"
        android:layout_height="42dp"
        android:layout_marginTop="32dp"
        android:text="Choose your Food Court!"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/foodclubBtn"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="180dp"
        android:text="Food Club"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/makanplaceBtn"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="180dp"
        android:text="Makan Place"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/poolsideBtn"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="60dp"
        android:text="Pool Side"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/munchBtn"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="180dp"
        android:text="Munch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/contentMargin">

    <TextView
        android:id="@+id/canteen_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ListItemTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/canteen_location_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ListItemSubTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/canteen_name_text_view" />

    <ImageView
        android:id="@+id/table_1_image_view"
        android:layout_width="100dp"
        android:layout_height="180dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/green" />

    <ImageView
        android:id="@+id/table_2_image_view"
        android:layout_width="100dp"
        android:layout_height="180dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/table_3_image_view"
        app:layout_constraintStart_toEndOf="@+id/table_1_image_view"
        app:srcCompat="@drawable/green" />

    <ImageView
        android:id="@+id/table_3_image_view"
        android:layout_width="100dp"
        android:layout_height="180dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/green" />

</androidx.constraintlayout.widget.ConstraintLayout>